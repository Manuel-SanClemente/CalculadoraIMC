<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/imcCalculatorFragment">

    <fragment
        android:id="@+id/imcCalculatorFragment"
        android:name="com.example.calculoimc.ImcCalculatorFragment"
        android:label="fragment_imc_calculator"
        tools:layout="@layout/fragment_imc_calculator" >
        <action
            android:id="@+id/action_imcCalculatorFragment_to_resultImcFragment"
            app:destination="@id/resultImcFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultImcFragment"
        android:name="com.example.calculoimc.ResultImcFragment"
        android:label="fragment_result_imc"
        tools:layout="@layout/fragment_result_imc" >
        <action
            android:id="@+id/action_resultImcFragment_to_imcCalculatorFragment"
            app:destination="@id/imcCalculatorFragment" />
        <argument
            android:name="genero"
            app:argType="string" />
        <argument
            android:name="altura"
            app:argType="integer" />
        <argument
            android:name="peso"
            app:argType="integer" />
        <argument
            android:name="edad"
            app:argType="integer" />
    </fragment>
</navigation>